<div class = "row">
  <div class="col-xs-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id ="error_explanation">
          <ul>
	          <% task.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
	          <% end %>
	        </ul>
	      </div>
      <% end %>
      
      <div class="from-group">
        <%= f.label :content, "タスク"%>
	      <%= f.text_field :content, class: "form-controll" %>
      </div>
      
      <div class="form-group">
	      <%= f.label :status, "状態" %>
	      <%= f.text_field :status, class: "from-controll"%>
      </div>

      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

